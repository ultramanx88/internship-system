// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  name      String?
  email     String   @unique
  password  String
  roles     Role[]
  skills    String?
  statement String?
  applications Application[]

  @@map("users")
}

model Internship {
  id          String   @id @default(cuid())
  title       String
  company     String
  location    String
  description String
  type        String
  applications Application[]

  @@map("internships")
}

model Application {
  id           String    @id @default(cuid())
  student      User      @relation(fields: [studentId], references: [id])
  studentId    String
  internship   Internship @relation(fields: [internshipId], references: [id])
  internshipId String
  status       String
  dateApplied  DateTime
  feedback     String?
  projectTopic String?

  @@map("applications")
}

model Faculty {
  id      String @id @default(cuid())
  nameTh  String
  nameEn  String

  @@map("faculties")
}

enum Role {
  admin
  staff
  courseInstructor
  committee
  visitor
  student
}
