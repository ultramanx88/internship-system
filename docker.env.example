# =============================================================================
# üê≥ Docker Environment Variables Example
# =============================================================================
# Copy this file to .env and update with your production values

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=internship_system_prod
POSTGRES_PORT=5432

# DATABASE_URL Examples:
# For Local Development:
# DATABASE_URL="postgresql://postgres:password@localhost:5432/internship_system_dev?schema=public"
# For VPS/Production:
# DATABASE_URL="postgresql://username:password@your-vps-ip:5432/internship_system_prod?schema=public"
# For Docker Compose:
# DATABASE_URL="postgresql://postgres:password@postgres:5432/internship_system_dev?schema=public"

# Application Configuration
NODE_ENV=production
APP_PORT=8080
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:8080

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_redis_password_here
REDIS_PORT=6379

# Web Server Configuration
HTTP_PORT=80
HTTPS_PORT=443

# pgAdmin Configuration (optional)
PGADMIN_EMAIL=admin@yourdomain.com
PGADMIN_PASSWORD=your_pgadmin_password_here
PGADMIN_PORT=8081

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# Security
CORS_ORIGIN=http://localhost:8080
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_MAX_FILES=5
